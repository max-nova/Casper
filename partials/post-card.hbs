<article class="post-card {{post_class}}
{{#has tag="#large-post, annual-focus, annual-best, series"}}prefer-large{{/has}}
{{#unless feature_image}}no-image{{/unless}}">

    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="post-card-image"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 700px"
            loading="lazy"
            src="{{img_url feature_image size="m"}}"
            alt="{{title}}"
        />

        {{#has tag="5-stars"}}<div class="post-card-rating">&#9733;&#9733;&#9733;&#9733;&#9733;</div>{{/has}}
        {{#has tag="4-stars"}}<div class="post-card-rating">&#9733;&#9733;&#9733;&#9733;&#9734;</div>{{/has}}
        {{#has tag="3-stars"}}<div class="post-card-rating">&#9733;&#9733;&#9733;&#9734;&#9734;</div>{{/has}}
        {{#has tag="2-stars"}}<div class="post-card-rating">&#9733;&#9733;&#9734;&#9734;&#9734;</div>{{/has}}
        {{#has tag="1-star"}}<div class="post-card-rating">&#9733;&#9734;&#9734;&#9734;&#9734;</div>{{/has}}

        {{^has tag="5-stars,4-stars,3-stars,2-stars,1-star"}}
            <div class="post-card-title">{{title}}</div>
        {{/has}}
    </a>
    {{/if}}

</article>
